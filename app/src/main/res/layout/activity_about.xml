<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar_about" />

    <ImageView
        android:layout_width="188px"
        android:layout_height="188px"
        android:layout_marginTop="154px"
        android:src="@drawable/icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="46px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="36dp"
            android:layout_height="1dp"
            android:background="#ddd" />

        <TextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:text="@string/app_name"
            android:textColor="#999"
            android:textSize="13sp" />

        <View
            android:layout_width="36dp"
            android:layout_height="1dp"
            android:background="#ddd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看"
            android:textColor="#999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/about_protocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="#f97e76"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/about_check"
        android:layout_width="320px"
        android:layout_height="88px"
        android:layout_marginTop="52px"
        android:background="@drawable/about_btn_gradient"
        android:gravity="center"
        android:text="检测新版本"
        android:textColor="#fff"
        android:textSize="32px" />
</com.zhy.autolayout.AutoLinearLayout>